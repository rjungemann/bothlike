<% if @likes.empty? %>
	<h1>We couldn't find anything you both like</h1>

	<p>Sorry, we couldn't find anything you and <%= @friend_name %> both like on Facebook.</p>
<% else %>
	<h1>You both like</h1>

	<p>Looks like you and <%= @friend_name %> like <%= @likes.length %> of the same things on Facebook!</p>

	<ul>
		<% @likes.each do |like| %>
			<li><%= like["name"] %></li>
		<% end %>
	</ul>
<% end %>

<p><%= link_to "Try again?", :controller => "friends", :action => "signin" %></p>